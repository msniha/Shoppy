<h1>Add Category</h1>

<%= form_for(@category) do |f| %>

<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>

<div class="field">
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</div>

<div class="actions">
	<%= f.submit "Add category" %>
</div>
<% end %>

